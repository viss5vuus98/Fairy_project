<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="favicon.ico">
    <title>Template</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous" asp-append-version="true">
    <!-- Ionicons Fonts Css -->
    <link rel="stylesheet" href="~/lib/plugins/ionicons/ionicons.min.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/lib/plugins/animate-css/animate.css">
    <!-- Hero area slider css-->
    <link rel="stylesheet" href="~/lib/plugins/slider/slider.css">
    <!-- slick slider -->
    <link rel="stylesheet" href="~/lib/plugins/slick/slick.css">
    <!-- Fancybox -->
    <link rel="stylesheet" href="~/lib/plugins/facncybox/jquery.fancybox.css">
    <!-- hover -->
    <link rel="stylesheet" href="~/lib/plugins/hover/hover-min.css">
    <!-- Magnify Popup -->
    <link rel="stylesheet" href="~/lib/plugins/magnific-popup/magnific-popup.css">
    <!-- googlefont -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">
    <!-- template CSS -->
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/userChatB4.css" asp-append-version="true" />
    @await RenderSectionAsync("Style", required: false)
</head>
<body>
    <!-- Navbar -->
    <section class="top-bar animated-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="@Url.Action("Index","Manufacturer")">
                            <img class="logo-image" src="~/images/homeLogo.jpg" alt="logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Manufacturer")">
                                        Home
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>



                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Apply", "Manufacturer")">申請</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Policy", "Manufacturer")">規範</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")" id="out">登出</a>
                                </li>
                            </ul>



                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <div id="chat-circle" class="btn btn-raised btn-toggle scaleBox">
        <div id="chat-overlay">
        </div>
        <i class="fa-solid fa-comment-dots title-icon"></i>
    </div>
    <div class="card mx-auto card-toggle chat-box" id="chat-card" style="max-width: 400px;">
        <div class="card-header bg-transparent">
            <div class="navbar navbar-expand p-0">
                <ul class="navbar-nav me-auto align-items-center">
                    <li class="nav-item">
                        <a href="#" class="title-image">
                            <div class="position-relative chat-image">
                                <img src="~/images/homeLogo.jpg" alt="Logo" class="img-fluid rounded-circle mx-auto">
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <span>House會員服務台</span>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="">
                        <a href="#" class="nav-link" id="chat-exit-btn">
                            <i class="fas fa-times"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body p-4 chat-box-body" id="chat-content" style="height: 500px; overflow: auto;">
        </div>
        <div class="card-footer bg-white m-0 p-1 w-100 chat-box-footer">
            <div class="input-group">
                <input type="text" class="form-control border-0" id="input-msg" placeholder="Write a message...">
                <button class="btn btn-light text-secondary btn-send" id="send-msg" date-self="">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
    <!--  -->
    <main class="mt-3" role="main">


        @RenderBody()

    </main>
    @*------footer------*@
    <footer id="footer">
        <div class="container">
            <div class="row content-justify-between ">
                <div class="col-md-8 col-6 text-center text-lg-left text-md-left">
                    <p class="copyright">
                        &copy 2022 Design and Developed by <a href="http://www.Themefisher.com"
                                                              target="_blank">合展屋展覽館</a>. <br>
                        開放時間：週二至週日，上午9:30至下午5:30 (週一、除夕休館)
                        <a href="https://themefisher.com/free-bootstrap-templates/" target="_blank">&reg;WooHouse</a>
                    </p>
                </div>
                <div class="col-md-4 col-6">
                    <!-- Social Media -->
                    <ul class="social text-center text-md-right text-lg-right">
                        <li>
                            <a href="#" class="Facebook">
                                <i class="ion-social-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="Twitter">
                                <i class="ion-social-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="Linkedin">
                                <i class="ion-social-linkedin"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="Google Plus">
                                <i class="ion-social-googleplus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    @*------footer------*@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <!-- Form Validation -->
    <script src="~/lib/plugins/form-validation/jquery.form.js"></script>
    <script src="~/lib/plugins/form-validation/jquery.validate.min.js"></script>
    <!-- slick slider -->
    <script src="~/lib/plugins/slick/slick.min.js"></script>
    <!-- bootstrap js -->
    <!-- wow js -->
    <script src="~/lib/plugins/wow-js/wow.min.js"></script>
    <!-- slider js -->
    <script src="~/lib/plugins/slider/slider.js"></script>
    <script src="~/lib/plugins/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- Fancybox -->
    <script src="~/lib/plugins/facncybox/jquery.fancybox.js"></script>
    <script src="~/lib/jquery.qrcode/jquery.qrcode.min.js"></script>
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/49896da301.js" crossorigin="anonymous"></script>
    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- template main js -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/js/userChat.js" asp-append-version="true"></script>
    <script>
        let mfID = @TempData["manufactureId"]
            let info = {
                id: mfID,
            }
        sessionStorage.setItem('Info', JSON.stringify(info))

        $('#out').click(
            function() {
                sessionStorage.clear();
            })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
