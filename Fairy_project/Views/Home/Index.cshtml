    $('.fa-chevron-left').parent().click((e) => {
        leftclick = true;
        e.preventDefault();
        $('.imglist').css('transition', '1s');
        $('.imglist').css('transform', 'translateX(-3000px)');
        $('.imglist div').eq(1).css('opacity', '0')
        $('.fa-chevron-left').parent().removeAttr('href');
    })
    $('.fa-chevron-right').parent().click((e) => {
        rightclick = true;
        e.preventDefault();
        $('.imglist').css('transition', '1s');
        $('.imglist div').eq(2).css('opacity', '0')
        $('.imglist').css('transform', 'translateX(-0px)');
        $('.fa-chevron-right').parent().removeAttr('href');
    })
    $('.imglist').on('transitionend', () => {
        if (leftclick == true) {
            $('.imglist').css('transition', '0s');
            $('.imglist').append($('.imglist div').eq(0));
            $('.imglist').css('transform', 'translateX(-1500px)');
            $('.fa-chevron-left').parent().attr('href', '');
            leftclick = false;
        }
        else if (rightclick == true) {
            $('.imglist').css('transition', '0s');
            $('.imglist').prepend($('.imglist div').eq(4));
            $('.imglist').css('transform', 'translateX(-1500px)');
            $('.fa-chevron-right').parent().attr('href', '');
            rightclick = false;
        }
    })
    $('.imglist div').on('transitionend', (e) => {
        e.stopPropagation();
        $('.imglist div').css('opacity', '1');
    })</script>


