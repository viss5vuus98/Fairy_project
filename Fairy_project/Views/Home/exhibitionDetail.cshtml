@model Fairy_project.ViewModels.eDrtailViewModel;

@{
    Layout = "_LayoutB5";
}

@section Style
{
    <link rel="stylesheet" href="~/css/exhibitionDetil.css" asp-append-version="true" />
}
<section class="main mb-5">
    <div class="container">
        <div class="row main_content">
            <div class="left-content col-xl-9 col-lg-7">
                <h3 class="exhibit_tiltle">@Model.Exhibition.ExhibitName</h3>
                <div class="exhibit_image">
                    <img src="~/images/@Model.Exhibition.ExhibitPImg"
                         class=".img-fluid img-thumbnail" alt="展覽圖片">
                </div>
            </div>
            <div class="right-content col-xl-3 col-lg-5 mb-lg-3">
                <h4 class="content_title">活動資訊</h4>
                <hr>
                <div class="date_time mb-lg-3">
                    <h4>時間</h4>
                    <span class="date_start">@Model.Exhibition.Datefrom.ToString("yyyy-MM-dd")</span>~<span class="date_end">@Model.Exhibition.Dateto.ToString("yyyy-MM-dd")</span>
                </div>
                <hr>
                <div class="place mb-lg-3">
                    <h4>展場位置</h4>
                    <span class="inner_place">@Model.Exhibition.AreaNum</span><span>館</span>
                </div>
                <hr>
                <div class="description">
                    <h4>展覽詳細</h4>
                    <p class="inner_description">
                        @Model.Exhibition.ExDescription;
                    </p>
                </div>
                <hr>
                <div class="price">
                    <h4>購買票券</h4>
                    <p>
                        <span>票價： </span><span class="inner_price">@Model.Exhibition.TicketPrice</span><span>NT</span>
                    </p>
                    <div>
                        <button class="btn btn-main btn-small btn_cart" data-id="@Model.Exhibition.ExhibitId">加入購物車</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cards">
    <div class="container">
        <div class="row card_content" id="cards-content">

        </div>
        </div>
</section>


@section Scripts {
    <script>
        const exhibitId = @Model.Exhibition.ExhibitId
        const rootUrl = '/Home/';
        const root = @Url.Content("~/images/");
    </script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/eDetail.js" asp-append-version="true"></script>
}
