@model IEnumerable<Fairy_project.Models.Exhibitionss>

@{
    Layout = "_Layout";
}

@section Style
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous" asp-append-version="true">
    <!-- Ionicons Fonts Css -->
    <link rel="stylesheet" href="~/lib/plugins/ionicons/ionicons.min.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/lib/plugins/animate-css/animate.css">
    <!-- Hero area slider css-->
    <link rel="stylesheet" href="~/lib/plugins/slider/slider.css">
    <!-- slick slider -->
    <link rel="stylesheet" href="~/lib/plugins/slick/slick.css">
    <!-- Fancybox -->
    <link rel="stylesheet" href="~/lib/plugins/facncybox/jquery.fancybox.css">
    <!-- hover -->
    <link rel="stylesheet" href="~/lib/plugins/hover/hover-min.css" asp-append-version="true">
    <!-- Magnify Popup -->
    <link rel="stylesheet" href="~/lib/plugins/magnific-popup/magnific-popup.css">
    <!-- googlefont -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
<style>
    .search {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-bottom: 50px;
        font-weight: 900;
    }

    .H3-TEXT {
        /*-webkit-line-clamp: 1;*/
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        /* display: -webkit-box;
        display: -webkit-box-orient;*/
        max-height: 33.11px;
        min-height: 33.11px;
    }

</style>
}

<div class="container" style="margin-top:200px;margin-bottom:100px;">

    <div class="search">
        <h2>展覽搜尋</h2>
    </div>

    <form asp-action="search">
        <div class="input-group">
            <a asp-controller="Home" asp-action="search" asp-route-id="1" class="btn btn-dark btn-41">單價遞增</a>
            <a asp-controller="Home" asp-action="search" asp-route-id="2" class="btn btn-dark btn-41">單價遞減</a>
            <span class="input-group-text">展覽關鍵字</span>
            @*<input type="text" class="form-control" name="txtKeyword" />*@
            <input type="text" class="form-control" name="txtKeyword" placeholder="請輸入展覽名稱" autocomplete="off" value="@ViewBag.txtKeyword" id="exname">
            <input type="date" name="dtStart" value="@ViewBag.dtStart" id="dtStart"/>
            <input type="date" name="dtEnd" value="@ViewBag.dtEnd" id="dtEnd"/>
            <input type="submit" value="搜尋" class="btn btn-dark btn-41" id="submit" />
        </div>
    </form>

    <div class="row" style="margin-top:50px;">
        @foreach (var item in Model)
        {
            @*<div class="card col-12 col-sm-6 col-md-4 d-flex" style="width: 18rem;margin-top:50px;">
        <img src="@Url.Content("~/images/")@item.ExhibitPImg" class="card-img-top" alt="@item.ExhibitName">
        <div class="card-body">
        <h5 class="card-title flex-grow-1">@item.ExhibitName</h5>
        <p class="card-text">@item.Datefrom~@item.Dateto</p>
        <p>單價：@item.TicketPrice</p>
        <a href="#" class="btn btn-dark stretched-link">詳細資訊</a>
        </div>
        </div>*@

                <div class="col-md-4 col-sm-6" style="margin-top:30px;">
                    <div class="products d-flex flex-column card-0">
                        <figure class="wow fadeInLeft animated portfolio-item" data-wow-duration="500ms" data-wow-delay="0ms">
                            <div class="img-wrapper">
                                <img src="@Url.Content("~/images/")@item.ExhibitPImg" class="img-fluid" alt="this is a title">
                                <div class="overlay">
                                    <div class="buttons">
                                    @*<button class="btn btn_buy btn_cart" data-id="@item.ExhibitId">購票</button>*@
                                        @*<a rel="gallery" class="fancybox btn_cart" href="#">加入購物車</a>*@
                                        <a target="" href="@Url.Action("exhibitionDetail","Home")/@item.ExhibitId">展覽詳細資訊</a>
                                    </div>
                                </div>
                            </div>
                            <figcaption>
                                <h4>
                                    <a href="#" class="H3-TEXT" style="display:block;">
                                    @item.ExhibitName
                                    </a>
                                </h4>
                                <p class="card-text">@item.Datefrom.ToString("yyyy/MM/dd")~@item.Dateto.ToString("yyyy/MM/dd")</p>
                                <p>單價：@item.TicketPrice</p>
                            @*<p class="card_description">
                        @item.ExDescription
                        </p>*@
                            </figcaption>
                        </figure>
                    </div>
                </div>
        }
    </div>
</div>

    @section Scripts
    {
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script>
$('#submit').click(function() {
    if ($('#exname').val() == '' || $('#dtStart').val() == '' || $('#dtEnd').val() == '') {
        alert("請輸入展覽名稱和日期")
    }
})
</script>
    }

    

