@model Fairy_project.ViewModels.LoginViewModels;


    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true"/>
    
    <div class="content">
        <div class="form sign-in" style="margin-top:120px">
            <form method="post" action="@Url.Action("Index")">
                <h2>歡迎回來</h2>
                <label>
                    <span>帳號</span>
                    <input type="text" required name="uid"/>
                </label>
                <label>
                    <span>密碼</span>
                    <input type="password" required name="pwd"/>
                </label>
                <!-- <p class="forgot-pass"><a href="javascript:">忘記密碼？</a></p> -->
                <button type="submit" class="submit button">登 入</button>
            </form>
        </div>
        
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>尚未成為會員？</h2>
                    <p>立即註冊會員!</p>
                </div>
                <div class="img__text m--in">
                    <h2>已有帳號？</h2>
                    <p>帳號登入,好久不見!</p>
                </div>
                <div class="img__btn">
                    <span class="m--up">會員註冊</span>
                    <span class="m--in">登 入</span>
                </div>
                <div class="img__btn2">
                    <span class="m--up">廠商註冊</span>
                    <span class="m--in">登 入</span>
                </div>
            </div>
            <div class="first">
                <form method="post" action="@Url.Action("Index")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form sign-up">
                    <h2>會員註冊</h2>
                    <label>
                        <span>電子郵件(登入帳號)</span>
                        <input asp-for="member.memberAc" id="memaccount" type="email" required/>
                        <input asp-for="permissions.account" id="memaccount1" type="email" style="display:none"/>
                    </label>
                    <label>
                        <span>密碼</span>
                        <input asp-for="permissions.password" type="password" required/>
                    </label>
                    <label>
                        <span>會員名稱</span>
                        <input asp-for="member.memberName" type="text" required/>
                    </label>
                    <div class="gender">
                        <input type="radio" name="gender" value="男">
                        <label>男</label>
                        <input type="radio" name="gender" value="女">
                        <label>女</label>
                        <input asp-for="member.gender" type="text" id="gender" style="visibility:hidden;">
                    </div>
                    <label>
                        <span>地址</span>
                        <input asp-for="member.address" type="text" required/>
                    </label>
                    <label>
                        <span>電話</span>
                        <input asp-for="member.phoneNumber" type="text" required/>
                        <input asp-for="permissions.permissionsLv" type="number" value="1" style="display:none"/>
                    </label>
                    <div class="form-group">
                        <input type="submit" value="註冊" class="button submit" id="btn" />
                    </div>
                </div>
                </form>
            </div>
            <div class="second">
                <form method="post" action="@Url.Action("Index")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form sign-up">
                    <h2>廠商註冊</h2>
                    <label>
                        <span>廠商名稱</span>
                        <input asp-for="manufactures.manufactureName" type="text" required/>
                    </label>
                    <label>
                        <span>統一編號(登入帳號)</span>
                        <input asp-for="manufactures.manufactureAcc" id="manaccount" type="text" required/>
                        <input asp-for="permissions.account" id="manaccount1" type="email" style="display:none"/>
                    </label>
                    <label>
                        <span>密碼</span>
                        <input asp-for="permissions.password" type="password" required/>
                    </label>
                    <label>
                        <span>廠商負責人</span>
                        <input asp-for="manufactures.mfPerson" type="text" required/>
                    </label>
                    <label>
                        <span>廠商EMAIL</span>
                        <input asp-for="manufactures.mfEmail" type="email" required/>
                    </label>
                    <label>
                        <span>廠商電話</span>
                        <input asp-for="manufactures.mfPhoneNum" type="number" required/>
                        <input asp-for="permissions.permissionsLv" type="number" value="2" style="display:none"/>
                    </label>
                    <div class="form-group">
                        <input type="submit" value="註冊" class="button submit" />
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $('.img__btn').on('click', function () {
            $('.content').toggleClass('s--signup');
            $(".first").show();
            $(".second").hide();
            $('.img__btn2').toggleClass('hidden');
        })

        $('.img__btn2').on('click', function () {
            $('.content').toggleClass('s--signup');
            $(".first").hide();
            $(".second").show();
            $('.img__btn').toggleClass('hidden');
        })
        $('.gender input:radio[name=gender]').click(function () {
            $('#gender').val($(".gender input:radio[name=gender]:checked").val())
        })
        $('#memaccount').change(function () {
            $('#memaccount1').val($('#account').val());
        })
        $('#manaccount').change(function () {
            $('#manaccount1').val($('#account').val());
        })
    </script>
    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






